               <%= noMatch %>
                
            <%    } %>
                </div>
             <% camp.forEach(function(a){ %>
                 <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                      <img src = "<%= a.image %>" >
                      
                        <div class ="caption">
                           <h4> <%= a.name %> </h4>
                    </div>
                    <p>
                    <a href = "/camp/<%= a._id %>"  class = "btn btn-primary">More info </a>
                    </p>
                    </div>


                 </div>
        
            <%  }); %>
            
            
        </div>
        
</div>
    

